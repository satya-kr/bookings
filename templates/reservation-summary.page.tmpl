{{template "base" .}}

{{define "content"}}
{{ $res := index .Data "reservation" }}
<div class="container mt-5 mb-5">
    <div class="row align-content-center">
        <div class="col-lg-12">
            <h1 class="text-center">Reservation Summary</h1>
            <br>
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>{{ $res.Name }}</td>
                            </tr>
                            <tr>
                                <th>Arrival</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Departure</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ $res.Email }}</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>{{ $res.Phone }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{{end}}